<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/linen">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="10dp"
                    android:layout_height="50dp">
                </View>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/mbsd_back"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/back" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="打卡记录"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:typeface="normal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:text="每日俯卧撑目标："
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="40px"
                    android:background="@drawable/rounded_background_4"/>
                <NumberPicker
                    android:id="@+id/npPushups"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/rounded_background_3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:text="每日仰卧起坐目标："
                    android:textSize="40px"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/rounded_background_4"/>
                <NumberPicker
                    android:id="@+id/npSitups"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:value="0"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/rounded_background_3"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_gravity="center">
            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="每日蹲起目标："
                android:textSize="40px"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/rounded_background_4"/>
            <NumberPicker
                android:id="@+id/npSquats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:value="0"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_background_3"/>
        </LinearLayout>
            <Button
                android:id="@+id/save_mbsd"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="保存"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="50dp">
            </Button>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
